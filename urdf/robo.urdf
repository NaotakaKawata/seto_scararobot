<?xml version="1.0"?>

<robot name="upper_body">
  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="package://seto_scararobot/meshes/base.stl"/>
      </geometry>
      <material name="dark_gray">
        <color rgba="0.25 0.25 0.25 2.0"/>
      </material>
    </visual>
  </link>

  <link name="arm1_link">
    <visual>
      <geometry>
        <mesh filename="package://seto_scararobot/meshes/arm1.stl"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 2.0"/>
      </material>
    </visual>
  </link>

  <link name="arm2_link">
    <visual>
      <geometry>
        <mesh filename="package://seto_scararobot/meshes/arm2.stl"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 2.0"/>
      </material>
    </visual>
  </link>


  <joint name="base_to_arm1" type="revolute">
    <parent link="base_link"/>
    <child link="arm1_link"/>
    <origin xyz="0 0 0.24400" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="-3.14159" upper="3.14159" velocity="0.5"/>
  </joint>


  <joint name="arm1_to_arm2" type="revolute">
    <parent link="arm1_link"/>
    <child link="arm2_link"/>
    <origin xyz="0 0.09 -0.008" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="-3.14159" upper="3.14159" velocity="0.5"/>
  </joint>

</robot>
